<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:background="#E0E2E1"
            tools:context=".Mine_page">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/headimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/head_portrait2"
                    android:layout_marginStart="0dp"

                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:layout_marginLeft="0dp" />
                <TextView
                    android:id="@+id/name"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"


                    android:layout_marginTop="15dp"
                    android:text="用户名"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="28dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/address"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="15dp"
                    android:text="修改地址"
                    android:textSize="20dp"
                    android:layout_marginLeft="1dp" />
                <ImageButton
                    android:id="@+id/ib_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setting"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="10dp"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="基础功能"
                android:background="#FFFFFF"
                android:textSize="28dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"

                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/card_bag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/card_bag"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="60dp" />
                <ImageButton
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/message"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="180dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="红包"
                    android:textSize="27dp"
                    android:layout_marginStart="52dp"
                    android:layout_marginLeft="52dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息"
                    android:textSize="27dp"
                    android:layout_marginStart="170dp"
                    android:layout_marginLeft="170dp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的订单"
                android:background="#FFFFFF"
                android:textSize="28dp"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pay"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="60dp" />
                <ImageButton
                    android:id="@+id/notpay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pay"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="180dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已完成"
                    android:textSize="27dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未完成"
                    android:textSize="27dp"
                    android:layout_marginStart="140dp"
                    android:layout_marginLeft="140dp" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="我的钱包"
                android:textSize="28dp"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的余额:"
                    android:textSize="28dp"
                    android:layout_marginTop="24dp"
                    />
                <TextView
                    android:id="@+id/balance"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="余额"
                    android:textSize="28dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="20dp" />
                <Button
                    android:id="@+id/Recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值"
                    android:textSize="24dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="70dp" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/Advantage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/advertisement"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:layout_marginTop="24dp"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>